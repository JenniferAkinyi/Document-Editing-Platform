{
    "compilerOptions": {
      "target": "ES6",                         
      "module": "CommonJS",                    
      "outDir": "./dist",                      
      "rootDir": "./src",                      
      "esModuleInterop": true,                 
      "skipLibCheck": true,                    
      "forceConsistentCasingInFileNames": true, 
      "strict": true                            
    },
    "include": ["src/**/*.ts", "src/server.ts"],                
    "exclude": ["node_modules", "dist"]         
}

  